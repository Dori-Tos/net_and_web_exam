<html>
<head>
	<title></title>
	<link rel="stylesheet" href="/css/StyleSheet.css" />
	<meta charset="utf-8" />
</head>
<body>
    <h1> Dictionnary </h1>
	<table>
		<tr>
			<th> Word </th>
			<th> Translation </th>
			<th>  </th>
			<th> Actions </th>
		</tr>
		<% for(translation of dictionnary) { %>
		<tr>
			<td><%= `${translation.word}`%></td>
			<td><%= `${translation.translation}`%></td>
			<td><%= `${translation.nbrgood/translation.nbrtotal}`%></td>
			<td><a href="/delete/<%= translation.idtranslation %>"> Delete </a> </td>
		</tr>
		<% } %>

	</table>
	<h2>New Translation</h2>
	<form action="/add" method="POST">
		<input type="text" name="new_word" size="10" required="" />
		<input type="text" name="new_translation" required="" />
		<input type="submit" value="Add" />
	</form>

	<form action="/questions" method="get">
		<button> Go to questions </button>
	</form>

</body>
</html>